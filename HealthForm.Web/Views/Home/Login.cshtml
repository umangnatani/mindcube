<div class="card">
    <div class="card-header" style="text-align:center">
        <h3><span class="text-danger">Welcome to Investigations Case Tracking System</span></h3>
    </div>
</div>
<div ng-controller="accountLoginController">
    <busy-indicator></busy-indicator>
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Login</h4>
        </div>
        
        <div class="card-body card-padding">

            <form name="entryForm">
                <div class="form-group">
                    <label class="fg-label">User Name</label>
                    <div class="fg-line">
                        <input class="form-control fg-input" type="text" ng-model="vm.UserName"
                               validator="required" name="UserName">
                    </div>
                    </div>
                <div class="form-group fg-line"">
                        <label class="fg-label">Password</label>
                        <input class="form-control fg-input" type="password" name="Password" ng-model="vm.Password" validator="required" />
                    </div>
            </form>

            <button type="submit" validation-submit="entryForm" class="btn btn-primary" ng-click="login()">Submit</button>
        </div>
    </div>
</div>

